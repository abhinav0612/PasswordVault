<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@color/colorPrimary"
        android:layout_marginTop="50dp"
        android:id="@+id/appIcon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/demoText"
        android:text="Enter Password"
        android:textSize="20sp"
        android:layout_below="@id/appIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:columnCount="4"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/appIcon"
        android:rowCount="1">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_columnWeight="1"
            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
            android:id="@+id/passwordFirst"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_columnWeight="1"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:id="@+id/passwordSecond"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_columnWeight="1"
            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
            android:id="@+id/passwordThird"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_columnWeight="1"
            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
            android:id="@+id/passwordFourth"/>
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:columnCount="3"
        android:rowCount="4"
        android:id="@+id/passwordGridLayout"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_rowWeight="1"
            android:text="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_rowWeight="1"
            android:text="2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_rowWeight="1"
            android:text="3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_rowWeight="1"
            android:text="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="5"
            android:textSize="26dp"
            android:layout_rowWeight="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="6"
            android:textSize="26dp"
            android:layout_rowWeight="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="7"
            android:textSize="26dp"
            android:layout_rowWeight="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="8"
            android:textSize="26dp"
            android:layout_rowWeight="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="9"
            android:textSize="26dp"
            android:layout_rowWeight="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="X"
            android:textSize="26dp"
            android:layout_rowWeight="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="26dp"
            android:layout_rowWeight="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="GO"
            android:textSize="26dp"
            android:layout_rowWeight="1"
            android:textStyle="bold" />
    </GridLayout>
</RelativeLayout>